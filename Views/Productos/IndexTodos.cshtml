@model IEnumerable<GestionPrueba.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Tablas.css" asp-append-version="true" />
</head>

<body>
    <header>

        <nav>
            <img class="logoE" src="~/img/Logo_Establecimiento.png" />
            <ul class="menu-horizontal">
                <li>
                    <a asp-action="Index" asp-controller="Usuarios" class="EmMenu">Empleados</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Productos" class="ProMenu">Productos</a>
                </li>            
                <li class="IS"><a asp-action="Salir" asp-controller="Home">Salir</a></li>
            </ul>
        </nav>
    </header>


    <div class="tituloT">
        <p>Productos</p>
    </div>
    <!--<img class="tituloT" src="~/img/Productos.png" />-->
    
    <div class="TodosU">
        <a asp-action="Index"><img src="~/img/Iconos/ActualizarPe.png" />Productos activos</a>
    </div>
    <div class="BtnAgragar">
        
        <a asp-action="Create"><img src="~/img//Iconos/MasAgregar.png" /> Agregar Producto</a>
    </div>
    <table class="Tabla2">
        <thead>
            <tr class="Tabla1">
                <th class="ValorT">
                    Código
                </th>
                <th class="ValorT">
                    Nombre
                </th>
                <th class="ValorT">
                    Precio
                </th>
                <th class="ValorT">
                    Descripción
                </th>
                <th class="ValorT">
                    Categoria
                </th>
                <th class="ValorT">
                    Aditivos
                </th>
                <th class="ValorT">
                    Estatus
                </th>
                <th class="ValorT">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="ValorT2">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ingredientes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aditivos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        <div class="btns2">
                            <div class="btnEditar2">
                                <a asp-action="EditActivar" asp-route-id="@item.IdProducto"><img src="~/img/Iconos/Modificar.png" /></a>
                            </div>
                            
                        </div>
                  
                    </td>
                </tr>
            }
        </tbody>
    </table>


</body>


<script>
        

</script>




