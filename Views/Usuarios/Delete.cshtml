@model GestionPrueba.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Formulario.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav>
            <img class="logoE" src="~/img/Logo_Establecimiento.png" />
            <ul class="menu-horizontal">
                <li>
                    <a asp-action="Index" asp-controller="Usuarios" class="EmMenu">Empleados</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Productos" class="ProMenu">Productos</a>
                </li>
                <li class="IS"><a asp-action="Salir" asp-controller="Home">Salir</a></li>
            </ul>
        </nav>
    </header>

    <div class="FFondo">
        <div class="FtituloD">
            <p class="">Deliminar Usuario</p>
        </div>
        <h3 class="pregunta">¿Está seguro de que quiere eliminar el usuario?</h3>
        <dl class="FFondo2">
            <dt class="DNombre Ftxt">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="INombre Ftxt">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="DApeP Ftxt">
                @Html.DisplayNameFor(model => model.ApellidoP)
            </dt>
            <dd class="IApeP Ftxt">
                @Html.DisplayFor(model => model.ApellidoP)
            </dd>
            <dt class="DApeM Ftxt">
                @Html.DisplayNameFor(model => model.ApellidoM)
            </dt>
            <dd class="IApeM Ftxt">
                @Html.DisplayFor(model => model.ApellidoM)
            </dd>
            <dt class="DCargo Ftxt">
                @Html.DisplayNameFor(model => model.Cargo)
            </dt>
            <dd class="ICargo Ftxt">
                @Html.DisplayFor(model => model.Cargo)
            </dd>
            <dt class="DSexo Ftxt">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class="ISexo Ftxt">
                @Html.DisplayFor(model => model.Sexo)
            </dd>
            <dt class="DEdad Ftxt">
                @Html.DisplayNameFor(model => model.Edad)
            </dt>
            <dd class="IEdad Ftxt">
                @Html.DisplayFor(model => model.Edad)
            </dd>
            <dt class="DCorreo Ftxt">
                @Html.DisplayNameFor(model => model.Correo)
            </dt>
            <dd class="ICorreo Ftxt">
                @Html.DisplayFor(model => model.Correo)
            </dd>
            <dt class="DContraseña Ftxt">
                @Html.DisplayNameFor(model => model.Contraseña)
            </dt>
            <dd class="IContraseña Ftxt">
                @Html.DisplayFor(model => model.Contraseña)
            </dd>
            <dt class="DEstatus Ftxt">
                @Html.DisplayNameFor(model => model.Estatus)
            </dt>
            <dd class="IEstatus Ftxt">
                @Html.DisplayFor(model => model.Estatus)
            </dd>
        </dl>

        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario1" />
            <input type="hidden" asp-for="Nombre" />
            <input type="hidden" asp-for="ApellidoP" />
            <input type="hidden" asp-for="ApellidoM" />
            <input type="hidden" asp-for="Cargo" />
            <input type="hidden" asp-for="Sexo" />
            <input type="hidden" asp-for="Edad" />
            <input type="hidden" asp-for="Correo" />
            <input type="hidden" asp-for="Contraseña" />
            <input type="hidden" asp-for="Estatus" value="False" />
            <div class="Dbtn">
                <input type="submit" value="Delete" class="FbtnB Ftxt" /> |
                <div class="DbtnR Ftxt">
                    <a asp-action="Index">Regresar</a>
                </div>
            </div>
            
           
        </form>
    </div>


</body>
