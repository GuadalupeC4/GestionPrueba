@model IEnumerable<GestionPrueba.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Tablas.css" asp-append-version="true" />
</head>

<body>
    <header>

        <nav>
            <img class="logoE" src="~/img/Logo_Establecimiento.png" />
            <ul class="menu-horizontal">
                <li>
                    <a asp-action="Index" asp-controller="Usuarios" class="EmMenu">Empleados</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Productos" class="ProMenu">Productos</a>
                </li>         
                <li class="IS"><a asp-action="Salir" asp-controller="Home">Salir</a></li>
            </ul>
        </nav>
    </header>

    <div class="tituloT">
        <p>Empleados</p>
    </div>
    <!--<img class="tituloT" src="~/img/Empleados.png" />-->
    
 
    <div class="TodosU">
        <a asp-action="Index"><img src="~/img/Iconos/ActualizarPe.png" />Usuarios Activos</a>
    </div>
    <div class="BtnAgragar">
        <a asp-action="Create"><img src="~/img/Iconos/MasAgregar.png" />Agregar Usuario</a>
    </div>
    <table class="Tabla">
        <thead>
            <tr>
                <th class="ValorT">
                    Usuario
                </th>
                <th class="ValorT">
                    Nombre
                </th>
                <th class="ValorT">
                    Apellido Paterno
                </th>
                <th class="ValorT">
                    Apellido Materno
                </th>
                <th class="ValorT">
                    Cargo
                </th>
                <th class="ValorT">
                    Sexo
                </th>
                <th class="ValorT">
                    Edad
                </th>
                <th class="ValorT">
                    Correo
                </th>
                <th class="ValorT">
                    Estatus
                </th>
                <th class="ValorT">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="ValorT2">
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidoP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidoM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sexo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>  
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        <div class="btns">
                            <div class="btnEditar">
                                <a asp-action="EditActivar" class="btn btn-warning" asp-route-id="@item.Usuario1"><img src="~/img/Iconos/ActualizarU.png" /></a>
                            </div>
                            
                        </div>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

@section Scripts{
    <script src="~/js/usuario.js"></script>
            }